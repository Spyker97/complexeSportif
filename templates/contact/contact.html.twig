{% extends 'base.front.html.twig' %}

{% block contactt %}
    {{ form_start (form) }}
    <div class="col-md-6 col-sm-12">
        <fieldset>
            {{ form_row (form.nom, {'' : '','attr':
                {'placeholder':'Entre ur email...'}}) }}
        </fieldset>
    </div>
    <div class="col-md-6 col-sm-12">
        <fieldset>
            {{ form_row (form.email, {'' : '','attr':
                {'placeholder':'Entre ur email...'}}) }}
        </fieldset>
    </div>
    <div class="col-md-12 col-sm-12">
        <fieldset>
            {{ form_row (form.subject, {'' : '','attr':
                {'placeholder':'Entre ur email...'}}) }}
        </fieldset>
    </div>
    <div class="col-lg-12">
        <fieldset>
            {{ form_row (form.message, {'' : '','attr':
                {'placeholder':'Entre ur email...'}}) }}
        </fieldset>
    </div>
    <div class="col-lg-12">
        <fieldset>
            <button type="submit" id="form-submit" class="main-button">Send Message</button>
        </fieldset>
    </div>
    {{ form_end (form) }}

{% endblock %}
